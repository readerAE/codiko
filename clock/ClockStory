    <style>
        body{
            margin-top: 20px;
            margin-left: 20px;
        }
        #currentTime{
            background-color: aqua;
            color:blue;
            display: inline-block;
            font-weight: bold;
            border: 0.5px solid slateblue;
            box-shadow: 5px 5px 6px rgba(0, 0, 0, 0.5);

        }
    </style>

    <script>
        function editOfTime (value){
            var stringTo = value.toString();
            var lengthto = stringTo.length;

            if (lengthto===1){
                return 0 + stringTo;
            } else {
                return stringTo;
            }

        }

        function counter (){
            var time    = new Date();
            var hours   = time.getHours();
            var minutes = time.getMinutes();
            var seconds = time.getSeconds();
            var timeString = editOfTime(hours) + ":" + editOfTime(minutes) + ":" + editOfTime(seconds);
            document.querySelector("#currentTime").innerHTML = timeString;
            }

        

        setInterval(counter,1000);
    </script>
    
